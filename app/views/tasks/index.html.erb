<div class="container text-left">
<h1>Tasks#Index</h1>
  <div class="row">
    <div class="col-12">
      <ul class="list-group list-group-flush">
        <% @tasks.each do |task| %>
          <li class="list-group-item">
            <% if task.completed %>
              <input type="checkbox" checked>
            <% else %>
              <input type="checkbox">
            <% end %>
            <%= link_to task.title, task_path(task)%>
          </li>
        <% end %>
      </ul>
      <%= link_to '✏️ Add new task', new_task_path, class:"btn btn-success" %>
    </div>
  </div>
</div>
