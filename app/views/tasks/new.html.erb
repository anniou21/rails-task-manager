<div class="container">
<h1>Tasks#New</h1>
    <div class="row">
        <div class="col-6 col-offset-3">
            <%= form_for(@task) do |f| %>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :details %>
                <%= f.text_field :details, class: 'form-control' %>
              </div>

              <%= f.submit class: 'btn btn-primary' %>
            <% end %>
        </div>
      </div>
</div>
